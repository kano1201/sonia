<div class ="info-table">
  <div class ="info-main text-center mt-2"><h5>- info -</h5></div>
  <div class ="info-img text-center mb-1"><%= attachment_image_tag(user, :profile_image,:fill, 100, 100,fallback: "no_image.jpg", size: "100x100")%></div>

  <table class="table table-borderless">
    <tr>
      <th><%= user.name %></th>
      <th><%= user.partner_name %></th>
    </tr>
    <tr>
      <th><%= user.anniversary %></th>
    </tr>
    <tr>
      <th><%= user.couple_name %></th>
    </tr>
    <tr>
      <th>Follows</th>
      <th><%= link_to user.followings.count, user_followings_path(user) %></th>
    </tr>
    <tr>
      <th>Followers</th>
      <th><%= link_to user.followers.count, user_followers_path(user) %></th>
    </tr>
  </table>

  <div class='info-btn text-right mr-2 mb-3'>
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class: "btn-flat-border-filled" %>
      <% else %>
        <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "btn-flat-border" %>
      <% end %>
    <% else %>
      <div>
        <%= link_to '', edit_user_path(user),class: "fas fa-cog nav-link text-danger edit_user_#{user.id}" %>
        <%= link_to '', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-danger' %>
      </div>
    <% end %>
  </div>
</div>