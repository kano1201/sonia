<div class="container">
  <div class="row mt-5 mb-5">
    <% if @model == 'user' %>
      <div class="col-md-8 mx-auto">
        <h5 class="mt-5 mt-lg-0 text-center">User search for "<%= @content %>"</h5>
        <div class="row mt-3 ml-4 mb-5">
          <%= render 'users/index', users: @records %>
        </div>
        <div  class="mt-5 text-center mx-auto">
          <%= paginate @records %>
        </div>
      </div>
    <% elsif @model == 'photo' %>
      <div class="col-xs-12 col-lg-8 col-xl-9 mx-auto">
        <h5 class="mt-5 mt-lg-0 text-center">Posts search for "<%= @content %>"</h5>
        <%= render 'photos/index', photos: @records %>
        <div  class="mt-5 text-center mx-auto">
          <%= paginate @records %>
        </div>
      </div>
    <% end %>
  </div>
</div>