<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-xs-12 col-lg-8 col-xl-9 mx-auto">
      <h5 class="mt-5 mt-lg-0 text-center">Follow Users</h5>
      <table class='table table-hover table-inverse'>
        <tbody>
          <% if @users.exists? %>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
                <td><%= user.couple_name %></td>
                <td>follow: <%= user.followings.count %></td>
                <td>follower: <%= user.followers.count %></td>
                <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
              </tr>
            <% end %>
        </tbody>
          <% else %>
            <p class="mt-3 mx-auto text-center">ユーザーはいません</p>
          <% end %>
      </table>
    </div>
  </div>
</div>
